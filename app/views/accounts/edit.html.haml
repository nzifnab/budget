= form_for @account, format: 'json', remote: true, html: {class: 'js-update-account'} do |f|
  %ul.fields
    = render partial: 'accounts/form', locals: {f: f}
    %li
      %label
      = f.submit "Update", class: 'btn btn-green'
      = link_to "Cancel", '#', class: 'btn btn-red', data: {click_remove: "#edit_account_#{@account.id}", click_show: ".js-account-content-#{@account.id}"}